<svg xmlns="http://www.w3.org/2000/svg" width="600" height="500" viewBox="0 0 600 500">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3B82F6;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="600" height="500" fill="url(#grad1)"/>
  <path d="M300 100v300M100 250h400" stroke="#60A5FA" stroke-width="4" stroke-dasharray="8 8"/>
  <circle cx="300" cy="250" r="50" fill="#60A5FA"/>
  <circle cx="100" cy="250" r="30" fill="#93C5FD"/>
  <circle cx="500" cy="250" r="30" fill="#93C5FD"/>
  <circle cx="300" cy="100" r="30" fill="#93C5FD"/>
  <circle cx="300" cy="400" r="30" fill="#93C5FD"/>
  
  <!-- Network elements -->
  <rect x="260" y="230" width="80" height="40" rx="5" fill="#fff" opacity="0.9"/>
  <text x="300" y="255" font-family="Arial" font-size="12" fill="#1E40AF" text-anchor="middle">Core Switch</text>
  
  <rect x="70" y="230" width="60" height="40" rx="5" fill="#fff" opacity="0.9"/>
  <text x="100" y="255" font-family="Arial" font-size="12" fill="#1E40AF" text-anchor="middle">Router</text>
  
  <rect x="270" y="80" width="60" height="40" rx="5" fill="#fff" opacity="0.9"/>
  <text x="300" y="105" font-family="Arial" font-size="12" fill="#1E40AF" text-anchor="middle">Firewall</text>
  
  <!-- Connecting lines with animation -->
  <g stroke="#60A5FA" stroke-width="2">
    <line x1="300" y1="120" x2="300" y2="230" stroke-dasharray="5,5">
      <animate attributeName="stroke-dashoffset" from="10" to="0" dur="1s" repeatCount="indefinite"/>
    </line>
    <line x1="130" y1="250" x2="260" y2="250" stroke-dasharray="5,5">
      <animate attributeName="stroke-dashoffset" from="10" to="0" dur="1s" repeatCount="indefinite"/>
    </line>
  </g>
</svg>
